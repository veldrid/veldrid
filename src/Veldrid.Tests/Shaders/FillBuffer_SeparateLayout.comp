#version 450

layout(std430, set = 0, binding = 0) readonly buffer CopySrc
{
    uint SourceData[];
};

layout(std430, set = 1, binding = 0) buffer CopyDst
{
    uint DestinationData[];
};

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

